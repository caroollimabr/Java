package com.exerciciojava.exercicioJava4;

import java.util.Scanner;

/**
 * Hello world!
 *
 */
public class App 
{
    public static void main( String[] args )
    {
        Scanner ler = new Scanner (System.in);
        
        int op, num1, num2, resultado;
        
        System.out.println("Digite o primeiro número: ");
        num1 = ler.nextInt();
        
        System.out.println("Digite o segundo número: ");
        num2 = ler.nextInt();
        
        System.out.println("Escolha qual opreção deseja realizar, digite 1, 2, 3 ou 4: ");
        System.out.println(" 1 - Adição\n 2 - Subtração\n 3 - Multiplicação\n 4 - Divisão\n");
        
        switch(op) {
        case 1: 
        	resultado = num1 + num2;
        	System.out.println("A o resultado da soma de " + num1 + " + "+ num2 + " é " + resultado);
        	break;
        	
        case 2: 
        	resultado = num1 - num2;
        	System.out.println("A o resultado da subtração de " + num1 + " - "+ num2 + " é " + resultado);
        	break;
        	
        case 3: 
        	resultado = num1 * num2;
        	System.out.println("A o resultado da multiplicação de " + num1 + " * "+ num2 + " é " + resultado);
        	break;
        	
        case 4: 
        	resultado = num1 / num2;
        	System.out.println("A o resultado da divisão de " + num1 + "/ "+ num2 + " é " + resultado);
        	break;
        }
        
    }
    
    
}
