    {
       Scanner ler = new Scanner(System.in);
       
       int numeros, a, b;
       
       System.out.println("Digite qualquer n√∫mero positivo ou negativo");
       numeros = ler.nextInt();
       
       if(numeros < 0) {
    	   a = numeros;
    	   System.out.println("numeros A: " + a);
       } else {
    	   b = numeros;
    	   System.out.println("numeros B: " + b);
       }
         	   
       
    }
