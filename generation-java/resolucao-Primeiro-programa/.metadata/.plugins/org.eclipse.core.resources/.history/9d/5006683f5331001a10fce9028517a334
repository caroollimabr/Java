package com.exerciciojava.exercicioJava3;

import java.util.Scanner;

/**
 * Hello world!
 *
 */
public class App 
{
    public static void main( String[] args )
    {
       Scanner ler = new Scanner(System.in);
       
       int numeros, a, b;
       
       System.out.println("Digite qualquer número positivo ou negativo");
       numeros = ler.nextInt();
       
       if(numeros < 0) {
    	   a = numeros;
    	   System.out.println("numeros A: " + a);
       } else {
    	   b = numeros;
    	   System.out.println("numeros B: " + b);
       }
       System.out.println("Deseja acrescentar mais algum número? (s/n)");
       
       boolean s = true;
       boolean n = false;
       
       while(s != true) {
    	   System.out.println("Digite qualquer número positivo ou negativo");
    	   numeros = ler.nextInt();
    	   
       }
    }
}
