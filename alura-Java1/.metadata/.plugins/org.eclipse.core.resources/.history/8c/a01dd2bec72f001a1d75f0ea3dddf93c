//para formatar: ctrl + shift + f --OU-- Source, Format
public class TestaCondicional {

	public static void main(String[] args) { // main + ctrl + espaço
		System.out.println();// sysout + ctrl + espaço
		int idade = 20;
		if (idade >= 18) { //use as chaves independente de uma ou mais linhas para melhor visualização
			System.out.println("Você é maior de idade.");
			System.out.println("Seja bem-vindo!");
		} else {
			System.out.println("Você é menor de idade. Infelizmente você não pode entrar.");
		}
	}

}
