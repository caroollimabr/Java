
public class TesteIR {

	    public static void main(String[] args) {

	        // 1900 a 2800.0: IR 7.5%, deduz R$ 142
	        // 2800.01 a 3751.0: IR 15%, deduz R$ 350
	        // 3751.01 a 4664.00: IR 22.5%, deduz R$ 636

	        double salario = 3900.0;

	        if(salario >= 1900.0 && salario <= 2800.0) {
	            System.out.println("A sua aliquota é de 7%");
	            System.out.println("Você pode deduzir até R$ 142");
	        } else if(salario >= 2800.01 && salario <= 3751.0) {
	            System.out.println("A sua aliquota é de 15%");
	            System.out.println("Você pode deduzir até R$ 350");
	        } else if(salario >= 3751.01 && salario <= 4664.0) {
	            System.out.println("A sua aliquota é de 22.5%");
	            System.out.println("Você pode deduzir até R$ 636");
	        }
	    }
}
